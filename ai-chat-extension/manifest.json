{
  "manifest_version": 3,
  "name": "AI Chat - My AI Memory",
  "version": "1.0.0",
  "description": "AI Chat with Smart Memory Management",
  "permissions": [
    "storage",
    "tabs",
    "history",
    "bookmarks",
    "unlimitedStorage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Chat"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-security.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
